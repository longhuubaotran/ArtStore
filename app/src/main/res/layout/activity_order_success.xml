<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_cart"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_cart"
        android:layout_centerInParent="true"
        android:fontFamily="@font/baloo_bhai"
        android:text="Your order has been placed successfully"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:id="@+id/order_success"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_success"
        android:textSize="18sp"
        android:id="@+id/confirm_code"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_code"
        android:layout_centerInParent="true"
        android:text="Done"
        android:background="@drawable/button"
        android:backgroundTint="@color/blue"
        android:id="@+id/done_btn"
        />
</RelativeLayout>